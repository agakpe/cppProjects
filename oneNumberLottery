/Chose a number between 1 and 100 to see if it matches random selected number/
#include ;
#include ;
#include ;
using namespace std;

int main ( ) {
srand( (unsigned int) time(NULL)));
int number = (rand ( ) % 100) + 1) ;

int guess = 0;

do { cout <<"Enter a guess (1 - 100) : " ;
cin >> guess;
if (guess > number)
cout << " Guess a lower number " <<endl;
else if (guess > number)
cout << " Guess a higher number " <<endl;
else
cout << " Correct number " <<endl;
}
while ( guess != number );
